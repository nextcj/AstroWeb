---
import Link from './Link.astro'

const isFrench = Astro.url.pathname.startsWith('/zh')

const en = {
	'email':"Email",
	'WeChat':"WeChat",
	'IT':"DC IT Department",
	'Made': 'DA CHUAN ',
	'Privacy policy': 'Privacy policy',
	'Source code': 'A Link',
	'Contact us': 'Contact Our Sales Team',
	by: 'AUTO INTERIOR SERVICE Co., Ltd.',
}
const zh = {
	'email':"邮箱",
	'WeChat':"官方微信",
	'IT':"大川 IT 部",
	'Made': '大川广州汽车服务有限公司',
	'Privacy policy': '隐私条款',
	'Source code': '备用链接',
	'Contact us': '联系我们的销售团队',
	by: '车智杰 & 大川汽配',
}
const trans = isFrench ? zh : en
---

<script>
	window.onpageshow = () => {
		const signatures = document.getElementById('signature_span') as HTMLSpanElement
		const rowdir = Math.random() > 0.5 ? 'row-reverse' : 'row'
		signatures.style.setProperty('--dir', rowdir)
	}
</script>

<footer>
	<div class="container">
		<div id="legal">
			<p>© 2024 {trans['IT']}</p>

			<p>
				<Link href="/privacy">{trans['Privacy policy']}</Link>
			</p>

			<!-- <p>
				<a href="/">{trans['Source code']}</a>
			</p> -->
		</div>

		<div id="signature">
			<p>{trans['Made']}</p>

			<p>
				<span>{trans.by}</span>
				<span id="signature_span">
				</span>
			</p>
		</div>

		<div id="contact">
			<p>
				<a href="/">{trans['WeChat']}</a> ·
				<a href="hufei.dev@aliyun.com">{trans['email']}</a>
			</p>

			<p>{trans['Contact us']}</p>
		</div>
	</div>
</footer>

<style>
	footer {
		width: 100%;
		min-height: 140px;
		font-size: 15px;
		color: #ccc;
		background-color: #1a1a1a;
		z-index: 2;
	}

	.container {
		display: flex;
		align-items: center;
		justify-content: space-between;
		margin: auto;
		padding: 2em 4em;
		max-width: 1200px;
	}

	#signature {
		text-align: center;
	}

	#signature_span {
		display: inline-flex;
		flex-direction: var(--dir);
		column-gap: 0.25em;
	}

	#contact {
		text-align: right;
	}

	footer p {
		margin: 0;
	}

	footer a {
		color: inherit;
	}

	footer a:hover {
		color: white;
		text-decoration: underline;
	}

	@media only screen and (max-width: 900px) {
		.container {
			display: grid;
			row-gap: 1em;
			grid-template-columns: 1fr 2fr;
			max-width: 700px;
		}

		#contact {
			text-align: left;
		}

		#signature {
			text-align: right;
			grid-column: 2;
			grid-row: 1 / 3;
		}
	}

	@media only screen and (max-width: 500px) {
		footer {
			position: inherit;
			background-color: #222;
		}

		.container {
			display: grid;
			row-gap: 2em;
			grid-template-columns: 1fr;
		}

		#signature {
			text-align: left;
			grid-column: 1;
			grid-row: 1;
		}
	}
</style>
