<style>
	#summary {
		margin: 4em 0 2em;
		display: grid;
		grid-template-columns: 1fr 1fr;
		grid-gap: 1em;
	}

	#summary a {
		display: flex;
		align-items: center;
		gap: 1.5em;
		padding: 1em;
		color: unset;
		cursor: pointer;
		border-radius: 15px;
		border: 1px solid transparent;
	}

	#summary a:hover {
		text-decoration: none;
	}

	#summary a:hover {
		background: #252525;
		border: 1px solid #fff1;
	}

	@media (prefers-color-scheme: light) {
		#summary a:hover {
			background: #e9e9e9;
		}
	}

	#summary a span {
		font-size: 2.5em;
	}

	#summary h3,
	#summary img {
		padding: 0;
		margin: 0;
	}

	#summary p {
		margin-top: 8px;
		margin-bottom: 0;
		font-size: 0.9em;
		opacity: 0.9;
	}

	@media only screen and (max-width: 700px) {
		#summary {
			grid-template-columns: 1fr;
		}
	}
</style>
