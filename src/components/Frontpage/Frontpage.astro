<style>
	h3 {
		font-size: 1.5em;
		font-weight: 500;
		text-align: center;
	}

	#hero {
		display: flex;
		flex-direction: column;
		position: relative;
		padding: 8em 4em;
		padding-top: 8em;
		justify-content: center;
		align-items: center;
		box-sizing: border-box;
		min-height: 80vh;
	}

	@media only screen and (max-height: 1000px) and (min-width: 700px) {
		#hero {
			min-height: 100vh;
		}
	}

	.section-wrapper {
		margin: auto;
		padding: 3em 2em;
		max-width: 1200px;
	}

	#showcase {
		color: white;
		background: linear-gradient(0.25turn, #140a17, #231730, #140a17);
	}

	#open,
	#donate {
		position: relative;
		color: white;
		background-position: 50% 50%;
		background-size: cover;
	}

	#open .section-wrapper,
	#donate .section-wrapper {
		max-width: 600px;
	}

	#open,
	#donate,
	#further {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 700px;
	}

	#further {
		min-height: 900px;
		background-color: #fafafd;
	}

	#donate .buttons {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		width: 100%;
		gap: 1em;
		margin-top: 3em;
	}

	@media only screen and (min-width: 1600px) {
		#open,
		#donate,
		#further {
			min-height: 900px;
		}
	}

	@media only screen and (max-width: 500px) {
		#hero {
			padding: 10em 2em;
			min-height: 200px;
		}

		#donate {
			padding-bottom: unset;
		}

		#donate h2 {
			margin-top: unset;
		}
	}

	@media only screen and (max-width: 390px) {
		#further .section-wrapper {
			padding: 2em 1em;
		}
	}
</style>
