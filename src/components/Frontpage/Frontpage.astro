---
import Background from '../Background.astro'

import LandingImage from '../../assets/backgrounds/mitch-meyers-YQD1Xljt4xo.jpg'
import OpenImage from '../../assets/backgrounds/matt-drenth-IZ0a3V1aSbc.jpg'
import DonateImage from '../../assets/backgrounds/timur-kozmenko-O_cPK84YZf4.jpg'
import { btc, kofi } from '../../assets/icons/donate'
---

<section id="hero">
	<Background src={LandingImage} blur=".7" brightness=".9" width="600" />

	<slot name="landing" />
</section>

<section id="showcase">
	<div class="section-wrapper">
		<slot name="showcase" />
	</div>
</section>

<section id="further">
	<div class="section-wrapper">
		<slot name="further" />
	</div>
</section>

<section id="open">
	<Background src={OpenImage} blur=".7" brightness=".8" width="600" />

	<div class="section-wrapper">
		<slot name="open-title" />
		<slot name="open-text" />
	</div>
</section>

